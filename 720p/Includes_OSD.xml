	<include name="MediaBoxes">
		<control type="grouplist">
			<width>260</width>
			<height>62</height>
			<align>left</align>
			<itemgap>8</itemgap>
			<orientation>horizontal</orientation>
			<!-- MPAA Flag (or Game Platform when in Advanced Launcher addon) -->
			<control type="group">
				<visible>!Player.HasAudio</visible>
				<width>58</width>
				<height>62</height>
				<control type="image">
					<include>MediaFlagsVarsSquare</include>
					<texture>$VAR[MediaFlag_MPAA]</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>!String.Contains(Container.FolderPath,advanced.launcher)</visible>
				</control>
				<control type="image">
					<include>MediaFlagsVarsSquare</include>
					<texture>special://skin/extras/games/platforms/$INFO[ListItem.Writer,,.png]</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>!String.IsEmpty(ListItem.Writer) + String.Contains(Container.FolderPath,advanced.launcher)</visible>
				</control>
				<control type="image">
					<posx>2</posx>
					<width>66</width>
					<height>54</height>
					<texture>flags/flag_framesquare.png</texture>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
				</control>
			</control>
			<!-- Star Rating (or Game Genre when in Advanced Launcher addon) -->
			<control type="group">
				<width>58</width>
				<height>62</height>
				<visible>!Player.HasAudio</visible>
				<control type="image">
					<include>MediaFlagsVarsSquare</include>
					<texture>Star.png</texture>
					<colordiffuse>RatingStarDiffuse</colordiffuse>
					<visible>!String.Contains(Container.FolderPath,advanced.launcher)</visible>
				</control>
				<control type="label">
					<include>MediaFlagsVarsSquare</include>
					<align>center</align>
					<aligny>center</aligny>
					<label>$VAR[MediaFlag_Rating]</label>
					<textcolor>MediaFlagDiffuse</textcolor>
					<font>METF_StarRating</font>
					<visible>!String.Contains(Container.FolderPath,advanced.launcher)</visible>
				</control>
				<control type="image">
					<include>MediaFlagsVarsSquare</include>
					<texture>special://skin/extras/games/genres/$INFO[ListItem.Genre,,.png]</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>!String.IsEmpty(ListItem.Genre) + String.Contains(Container.FolderPath,advanced.launcher)</visible>
				</control>
				<control type="image">
					<posx>2</posx>
					<width>66</width>
					<height>54</height>
					<texture>flags/flag_framesquare.png</texture>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
				</control>
			</control>
			<control type="group">
				<visible>Skin.HasSetting(Show_IMDbMediaFlag)</visible>
				<visible>!Player.HasAudio</visible>
				<visible>VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)</visible>
				<!-- IMDb Top250 Flag -->
				<control type="group">
					<width>58</width>
					<height>62</height>
					<visible>
						!Skin.HasSetting(Show_VotesMediaFlagAlways) + 
						[
							[!String.IsEmpty(ListItem.Top250) + !String.StartsWith(ListItem.Top250,0)]
							|
							[!String.IsEmpty(VideoPlayer.Top250) + !String.StartsWith(VideoPlayer.Top250,0)]
						]
					</visible>
					<control type="image">
						<include>MediaFlagsVarsSquareHalfTop</include>
						<texture>flags/IMDB-Logo.png</texture>
						<colordiffuse>IMDbDiffuseTop250</colordiffuse>
					</control>
					<control type="label">
						<include>MediaFlagsVarsSquareHalfBottom</include>
						<align>center</align>
						<aligny>center</aligny>
						<label>$VAR[MediaFlag_Top250]</label>
						<textcolor>MediaFlagDiffuse</textcolor>
						<font>METF_DialogSmallBold</font>
					</control>
					<control type="image">
						<posx>2</posx>
						<width>66</width>
						<height>54</height>
						<texture>flags/flag_framesquare.png</texture>
						<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
					</control>
				</control>
				<!-- IMDb Votes Flag (if not in Top250) -->
				<control type="group">
					<width>58</width>
					<height>62</height>
					<visible>
						[
							Skin.HasSetting(Show_VotesMediaFlagAlways) | 
							[
								[
									String.IsEmpty(ListItem.Top250) | 
									[!String.IsEmpty(ListItem.Top250) + String.StartsWith(ListItem.Top250,0)]
								] + 
								!String.IsEmpty(ListItem.Votes) + !String.StartsWith(ListItem.Votes,0)
							] | 
							[
								[
							 		String.IsEmpty(VideoPlayer.Top250) | 
							 		[!String.IsEmpty(VideoPlayer.Top250) + String.StartsWith(VideoPlayer.Top250,0)]
								] + 
								!String.IsEmpty(VideoPlayer.Votes) + !String.StartsWith(VideoPlayer.Votes,0)
							]
						]
					</visible>
					<control type="image">
						<include>MediaFlagsVarsSquareHalfTop</include>
						<texture>flags/IMDB-Logo.png</texture>
						<colordiffuse>IMDbDiffuseVotes</colordiffuse>
					</control>
					<control type="label">
						<include>MediaFlagsVarsSquareHalfBottom</include>
						<align>center</align>
						<aligny>center</aligny>
						<label>$VAR[MediaFlag_Votes]</label>
						<textcolor>MediaFlagDiffuse</textcolor>
						<font>METF_DialogVerySmallBold</font>
					</control>
					<control type="image">
						<posx>2</posx>
						<width>66</width>
						<height>54</height>
						<texture>flags/flag_framesquare.png</texture>
						<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
					</control>
				</control>
			</control>
			<control type="group">
				<control type="image">
					<top>5</top>
					<left>20</left>
					<width>100</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<colordiffuse>OSDProgressBar</colordiffuse>
					<texture fallback="flags/Rating10/rating0.png">$INFO[MusicPlayer.UserRating,flags/Rating10/rating,.png]</texture>
					<visible>Player.HasAudio</visible>
