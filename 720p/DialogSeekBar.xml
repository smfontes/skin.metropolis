<?xml version="1.0" encoding="UTF-8"?>
<window>
	<visible>[Window.IsActive(fullscreenvideo) | Window.IsActive(Visualisation)] + !Window.IsVisible(subtitlesearch)</visible>
	<visible>![Window.IsActive(VideoOSD) | Window.IsActive(MusicOSD)] + !Window.IsActive(FullscreenInfo) + [Player.Seeking | Player.HasPerformedSeek(3) | Player.Paused | Player.Forwarding | Player.Rewinding]</visible>
	<visible>!Player.FrameAdvance</visible>
	<controls>
		<control type="group">
			<include condition="!Skin.HasSetting(Slim_Seekbar)">OSD_Deck_Full</include>
			<include condition="Skin.HasSetting(Slim_Seekbar)">OSD_Deck_Slim</include>
			<visible>!Window.IsActive(Visualisation)</visible>
		</control>
		<control type="group">
			<include>OSD_Deck_Slim</include>
			<visible>!Player.ShowInfo + Window.IsActive(Visualisation)</visible>
		</control>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
	</controls>
</window>
